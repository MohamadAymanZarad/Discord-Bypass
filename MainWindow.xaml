<Window x:Class="DiscordBypass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Discord Bypass" 
        Height="600" Width="420"
        Style="{StaticResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Border Background="{StaticResource BackgroundPrimary}" CornerRadius="16">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Title Bar -->
                <RowDefinition Height="*"/>     <!-- Content -->
            </Grid.RowDefinitions>
            
            <!-- ========== TITLE BAR ========== -->
            <Grid Grid.Row="0" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <TextBlock Text="ðŸ›¡ï¸" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Discord Bypass" 
                               Foreground="{StaticResource TextPrimary}" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="â”€" Style="{StaticResource IconButton}" Click="MinimizeButton_Click"/>
                    <Button Content="âœ•" Style="{StaticResource CloseButton}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
            
            <!-- ========== MAIN CONTENT ========== -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24,16,24,24">
                    
                    <!-- Status Card -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="StatusText" 
                                           Text="DISCONNECTED" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextMuted}"/>
                                <TextBlock x:Name="StatusSubtext" 
                                           Text="Discord bypass is disabled"
                                           Style="{StaticResource SubheaderText}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- Main Power Toggle -->
                            <CheckBox x:Name="MainToggle" 
                                      Grid.Column="1" 
                                      Style="{StaticResource LargeToggleSwitch}"
                                      Checked="MainToggle_Changed"
                                      Unchecked="MainToggle_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- Status Indicator -->
                    <Border x:Name="StatusIndicator" 
                            Height="6" 
                            CornerRadius="3" 
                            Background="{StaticResource BackgroundTertiary}" 
                            Margin="0,0,0,24"/>
                    
                    <!-- Features Section -->
                    <TextBlock Text="FEATURES" 
                               Style="{StaticResource MutedText}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,12"/>
                    
                    <!-- Feature Toggles Card -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <StackPanel>
                            <CheckBox x:Name="DpiBypassToggle" 
                                      Content="DPI Bypass (GoodbyeDPI)" 
                                      Style="{StaticResource ToggleSwitch}"
                                      IsChecked="True"
                                      Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="DiscordToggle" 
                                      Content="Discord Access" 
                                      Style="{StaticResource ToggleSwitch}"
                                      IsChecked="True"
                                      Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="FiveMToggle" 
                                      Content="FiveM Connection Fix" 
                                      ToolTip="Requires Cloudflare WARP for UDP bypass (Fixes 'Couldn't connect' error)"
                                      Style="{StaticResource ToggleSwitch}"
                                      IsChecked="True"
                                      Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="ValorantToggle" 
                                      Content="Valorant VOIP" 
                                      Style="{StaticResource ToggleSwitch}"
                                      IsChecked="True"
                                      Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="LeagueToggle" 
                                      Content="League of Legends VOIP" 
                                      Style="{StaticResource ToggleSwitch}"
                                      IsChecked="True"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Settings Section -->
                    <TextBlock Text="SETTINGS" 
                               Style="{StaticResource MutedText}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,12"/>
                    
                    <!-- Settings Card -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <StackPanel>
                            <CheckBox x:Name="AutoStartToggle" 
                                      Content="Start with Windows" 
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="AutoStartToggle_Changed"
                                      Unchecked="AutoStartToggle_Changed"
                                      Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="MinimizeToTrayToggle" 
                                      Content="Minimize to system tray" 
                                      Style="{StaticResource ToggleSwitch}"
                                      IsChecked="True"
                                      Margin="0,0,0,16"/>

                            <CheckBox x:Name="LowPingModeToggle" 
                                      Content="Low Ping Mode (Stealth)" 
                                      ToolTip="Bypass VPN detection. Best for FiveM/Valorant. Ping stays 0."
                                      Style="{StaticResource ToggleSwitch}"
                                      IsChecked="False"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <Grid Margin="0,8,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="ApplyButton" 
                                Content="Apply Changes" 
                                Style="{StaticResource PrimaryButton}"
                                Click="ApplyButton_Click"/>
                        
                        <Button Grid.Column="2" 
                                Content="Reset" 
                                Style="{StaticResource SecondaryButton}"
                                Click="ResetButton_Click"/>
                    </Grid>
                    
                    <!-- Log Section -->
                    <TextBlock Text="STATUS LOG" 
                               Style="{StaticResource MutedText}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"/>
                    
                    <Border Background="{StaticResource BackgroundPrimary}" 
                            CornerRadius="8" 
                            Height="120"
                            BorderBrush="{StaticResource BackgroundTertiary}"
                            BorderThickness="1">
                        <ListBox x:Name="LogListBox" 
                                 Style="{StaticResource LogListBox}"/>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- System Tray Icon -->
            <tb:TaskbarIcon x:Name="TrayIcon"
                           ToolTipText="Discord Bypass"
                           TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu Background="{StaticResource BackgroundSecondary}">
                        <MenuItem Header="Show Window" Click="ShowWindow_Click"/>
                        <MenuItem Header="Toggle Bypass" Click="ToggleBypass_Click"/>
                        <Separator/>
                        <MenuItem Header="Exit" Click="Exit_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
            
        </Grid>
    </Border>
</Window>
